{
  "name": "@alpha-scanner/api",
  "version": "0.1.0",
  "description": "FastAPI backend for the Alpha Scanner platform",
  "scripts": {
    "dev": "DATABASE_URL=postgresql://postgres:postgres@localhost:5433/app USE_POLYGON_LIVE=false poetry run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "poetry run uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "install": "poetry install",
    "lint": "poetry run ruff check .",
    "format": "poetry run black . && poetry run ruff check . --fix",
    "test": "poetry run pytest",
    "clean": "find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true"
  },
  "keywords": [
    "fastapi",
    "python",
    "trading",
    "api"
  ],
  "license": "MIT"
}