# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here
USE_POLYGON_LIVE=false

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/app

# Supabase Configuration
# Use direct URL (5432) for migrations and pooled URL (6543, pgbouncer) for runtime
# Ensure sslmode=require for hosted Supabase connections
# Populate these when moving to Supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_DB_DIRECT_URL=postgresql://user:password@db.supabase.co:5432/postgres?sslmode=require
SUPABASE_DB_POOL_URL=postgresql://user:password@db.supabase.co:6543/postgres?sslmode=require&pgbouncer=true
SUPABASE_JWKS_URL=${SUPABASE_URL}/auth/v1/jwks
SUPABASE_JWT_ISSUER=${SUPABASE_URL}/auth/v1
SUPABASE_JWT_AUDIENCE=authenticated

# Timezone Configuration
TZ=UTC

# Risk Management Parameters
RISK_PCT_PER_TRADE=0.005
MAX_HEAT_PCT=0.02
DAILY_STOP_R=-2.0
LOSS_STREAK_HALT=8

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Web Configuration
WEB_PORT=3000
VITE_API_URL=http://localhost:8000
# Supabase for web (Vite)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Development
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info
